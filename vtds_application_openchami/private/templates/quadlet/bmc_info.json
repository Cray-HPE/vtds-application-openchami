# THIS COMMENT WILL BE STRIPPED BEFORE THIS FILE IS USED AS A JSON FILE.
#
# Information needed to set up and access BMCs, including usernames and
# passwords. It should be stored as a 'root' owned file with permission
# 0600 in /etc/vtds/bmc_info.json.

[
    {%- for xname, bmc_info in bmcs.items() %}
    {
        "xname": "{{ xname }}",
        "blade_class": "{{ bmc_info.blade_class }}",
        "blade_instance": "{{ bmc_info.blade_instance }}",
        "redfish_username": "{{ bmc_info.network.redfish_username }}",
        "redfish_password": "{{ bmc_info.network.redfish_password }}"
    }{%- if not loop.last -%},{%- endif -%}
    {%- endfor %}
]
